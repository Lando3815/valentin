    <h1>¿Quieres ser mi San Valentín?</h1>
    <div class="buttons">
        <button id="yes" onclick="confirmYes()">Sí</button>
        <button id="no" onclick="moveNo()">No</button>
    </div>

    <script>
        let yesButton = document.getElementById("yes");
        let noButton = document.getElementById("no");
        let sizeIncrease = 20;

        function moveNo() {
            let maxX = window.innerWidth - noButton.offsetWidth;
            let maxY = window.innerHeight - noButton.offsetHeight;
            let x = Math.random() * maxX;
            let y = Math.random() * maxY;
            noButton.style.position = "absolute";
            noButton.style.left = `${x}px`;
            noButton.style.top = `${y}px`;
            yesButton.style.fontSize = `${yesButton.offsetHeight + sizeIncrease}px`;
        }

        function confirmYes() {
            alert("¡Sabía que dirías que sí! ❤️");
        }
    </script>
</body>
